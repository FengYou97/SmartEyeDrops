<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".PhysicianProfileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/physician_image"
            android:layout_height="180dp"
            android:layout_width="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/physician_info"
            android:orientation="vertical"
            android:layout_toEndOf="@id/physician_image"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            android:paddingEnd="0dp">

            <TextView
                android:id="@+id/physician_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Physician"/>

            <TextView
                android:id="@+id/physician_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="10 new messages"/>
        </LinearLayout>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="@color/darkGrey"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_patients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

</LinearLayout>
